                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Product Price"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvProductPriceid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:layout_margin="5dp"
                    android:textStyle="bold"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Product Rating "
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvProductRatingid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.5"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textSize="20dp"/>
            </LinearLayout>
            <RadioButton
                android:id="@+id/btnSelectMouse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0056AD"
                android:text="Select"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="16dp"
        android:backgroundTint="#92D4FF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:id="@+id/tvProductNameid3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pen"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
