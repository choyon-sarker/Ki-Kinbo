<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvPayBillTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Bill"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="24dp"/>

    <!-- Bill Amount Display -->
    <TextView
        android:id="@+id/tvBillAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Bill is:"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tvBillAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="50.00"
        android:textSize="18sp"
        android:textColor="#000000"
        android:padding="15dp"
        android:background="#F0F0F0"
        android:gravity="center"/>

    <!-- Payment Method Selection -->
    <TextView
        android:id="@+id/tvPaymentMethodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Payment Method:"
        android:textSize="16sp"
        android:paddingTop="16dp"/>

    <Spinner
        android:id="@+id/spinnerPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"/>


    <TextView
        android:id="@+id/tvConfirmationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please confirm the bill amount and payment method before proceeding."
        android:textSize="14sp"
        android:textColor="#757575"
        android:paddingTop="20dp"
        android:gravity="center"/>

    <!-- Pay Button -->
    <Button
        android:id="@+id/btnPayBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Your Bill"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"/>
</LinearLayout>
